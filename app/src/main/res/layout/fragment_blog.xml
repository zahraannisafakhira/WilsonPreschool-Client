<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".BlogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blog"
            android:fontFamily="@font/poppinregular"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uhy"
            app:srcCompat="@drawable/pbl" />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textblog"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textNama"
                        android:fontFamily="@font/poppinregular"
                        android:textStyle="bold"
                        android:text="Wilson Preschool, Apply Play-Based Learning, Fulfill the Needs of Play and Optimize Basic Competencies of Early Childhood"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text2"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="Wilson Preschool, is a renowned educational institution in Jakarta, Indonesia, focusing on children's competency-based learning. With our Play-Based Learning approach, we foster children's self-development and lifelong learning by incorporating play into the learning process. Our curriculum, Competensi 5 Bintang Wilson, ensures an enjoyable educational experience while meeting core competencies."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/textNama"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text3"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="By embracing Play-Based Learning, inspired by Friedrich Froebel, a prominent figure in early childhood education, we recognize the importance of play as a natural need for young children. Play serves as a platform for learning, self-expression, and personal growth. At Wilson Preschool, children have the freedom to explore, create, interact, and understand the world around them through play."
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/text2"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text4"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="Through our Play-Based Learning approach, we not only fulfill children's basic needs but also optimize their development in key areas such as intelligence, health, care, balance, and communication. By engaging in play, children develop the necessary skills, knowledge, and behaviors that prepare them for future educational endeavors."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text3"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text5"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="Parents trust Wilson Preschool because of our commitment to providing a fulfilling learning experience. With options for full-time and part-time enrollment, we accommodate the learning and developmental needs of young children. Our Wilson Pop-Up Class activities are highly sought after, often with a waiting list. Parents appreciate our play-based approach, as it ensures an enjoyable and meaningful learning journey for their children, fostering bonding and consistent stimulation."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text4"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text6"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="Our dedicated teachers at Wilson Preschool play a crucial role in optimizing children's learning. They carefully plan play-based activities aligned with the curriculum, regularly observe and evaluate individual needs, and assess children's developmental progress. With their expertise and enthusiasm, our teachers create an environment where children can thrive, ensuring a holistic educational experience."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text5"
                        tools:ignore="NotSibling" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text7"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="At Wilson Preschool, we believe in the power of play to nurture young minds and prepare them for a bright future. Our commitment to Play-Based Learning and the Competensi 5 Bintang Wilson curriculum sets the foundation for children to become lifelong learners, equipped with essential competencies and a love for learning."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text6"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/formContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/form_background"
            app:layout_constraintTop_toBottomOf="@+id/textblog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:hint="Enter Name"
                app:boxBackgroundColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@id/feelfree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:hint="Enter Email"
                app:boxBackgroundColor="@color/white"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="217dp"
                android:hint="Comment"
                app:boxBackgroundColor="@color/white"
                app:endIconMode="custom"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textLongMessage"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/feelfree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feel Free to Leave a Comment"
                android:fontFamily="@font/poppinregular"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:fontFamily="@font/poppinregular"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formContainer" />

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        android:background="#FFFFFF"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/footer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/footerNama"
                        android:fontFamily="@font/poppinregular"
                        android:textStyle="bold"
                        android:text="About us"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/footer2"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppinregular"
                        android:textSize="15sp"
                        android:text="At Wilson Preschool, we believe in the power of early education to shape young minds and inspire a lifelong love for learning. For any inquiries or to schedule a visit, please don't hesitate to reach out to us."
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/footerNama"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>